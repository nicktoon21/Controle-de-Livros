<html>
    <body>
        <h1>Cadastro de livros</h1>   
            <div for( livro in data.livros)>
                <form>
                    <div >
                        <label for="titulo" >Titulo:</label>
                        <input type="text" id="titulo" name="titulo" placeholder="coloque o titulo" value="${livro.titulo}">
                    </div>
                    <div>
                        <label for="preco">Preço:</label>
                        <input type="text" id="preco" name="preco" placeholder="150.25"  value="${livro.preco}"/>
                    </div>
                    <div>
                        <label for="descricao">Descrição:</label>
                        <textarea cols="20" rows="10"  id="descricao" name="descricao" placeholder="fale sobre o livro">${livro.descricao}</textarea>
                    </div>
                    <button formaction="/livros" formmethod="put" name="id" value="${livro.id}">Alterar</button>
                </form> 
            </div>
                
              
    </body>
</html>